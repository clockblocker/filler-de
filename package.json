{
	"name": "cbcr-text-eater-de",
	"version": "0.0.1",
	"description": "Go trough the german texts, building your own dictionary from your personal contexts",
	"main": "main.js",
	"type": "commonjs",
	"scripts": {
		"format": "prettier --write .",
		"dev": "node esbuild.config.mjs",
		"build": "bun build ./src/main.ts --outfile=main.js --platform=node --format=cjs --external obsidian --external electron --external @codemirror/*",
		"lint": "bun biome check",
		"lint:fix": "bun biome check --write",
		"test": "vitest",
		"test:watch": "vitest -w",
		"coverage": "vitest run --coverage"
	},
	"keywords": [],
	"author": "clockblocker",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "^2.2.4",
		"@types/bun": "^1.3.0",
		"@types/codemirror": "latest",
		"@types/node": "latest",
		"@types/tern": "latest",
		"@typescript-eslint/eslint-plugin": "latest",
		"@typescript-eslint/parser": "latest",
		"@vitest/coverage-v8": "latest",
		"builtin-modules": "latest",
		"esbuild": "latest",
		"eslint": "latest",
		"eslint-config-prettier": "latest",
		"eslint-plugin-prettier": "latest",
		"obsidian": "^1.10.0",
		"prettier": "latest",
		"tslib": "latest",
		"tsx": "latest",
		"typescript": "latest",
		"vitest": "latest"
	},
	"dependencies": {
		"@codemirror/view": "latest",
		"@types/sbd": "latest",
		"openai": "5.22.0",
		"sbd": "latest",
		"typescript-eslint": "latest",
		"zod": "3.23.8"
	}
}
